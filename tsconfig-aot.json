{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "dist",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "More",
    "SKIP-create-bundle",
    "SKIP-AOT",
    "node_modules",
    "**/*.spec.ts",
    "src/__mocks__"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "dist"
  }
}
